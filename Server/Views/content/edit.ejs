<div class="container">
    <h1 class="col-lg-6 col-md-10 col-sm-10"><%= title %> Contact</h1>
    <hr>
    <div id="messageArea"></div>

    <div class="row justify-content-lg-center g-3">
      <form method="POST" class="col-lg-6 col-md-10 col-sm-10">

        <div class="input-group mb-3">
          <span class="input-group-text">Name</span>
          <input id="contactName" name="contactName" type="text" class="form-control" 
          value="<%= bcontact.Name %>"
          aria-label="Name" aria-describedby="Name Input" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Phone Number</span>
            <input id="contactPNumber" name="contactPNumber" type="text" class="form-control" 
            value="<%= bcontact.Phone_Number %>"
            aria-label="Phone Number" aria-describedby="Phone Number Input" required>
          </div>

        <div class="input-group mb-3">
        <span class="input-group-text">Email Address</span>
        <input id="contactEAddress" name="contactEAddress" type="text" class="form-control" 
        value="<%= bcontact.Email_Address %>"
        aria-label="Email Address" aria-describedby="Email Address Input" required>
        </div>
        
        <% if(title == "Edit") { %>
        <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
        <% } else {%>
        <button id="addButton" type="submit" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
        <% } %>  

        <a href="/Business-contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
      
      </form>

    </div>
</div>

